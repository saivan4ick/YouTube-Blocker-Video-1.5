{
  "manifest_version": 2,
  "name": "Youtube Blocker Video",
  "description": "Удаляем все YouTube видео со страницы! Быстрый доступ к Сайвану",
  "version": "1.5",
  "author": "Василь Сальков",
  "browser_action": {
    "default_title": "Расширение от Сайвана",
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery.min.js", "content.js", "changeBg.js"
      ]
    }
  ],
  "permissions": ["activeTab"]
}